<!-- Display the next tetromino -->
<div id="next-block">
  <canvas width="160" height="160" id="nextCanvas"></canvas> <!-- Increased canvas size -->
</div>

<script>
// Existing game code here...

// Canvas for rendering the next tetromino
const nextCanvas = document.getElementById('nextCanvas');
const nextContext = nextCanvas.getContext('2d');

// Adjust grid size for the larger next block display
const nextGrid = 32; // Increased grid size for larger next block

// Render the next tetromino in the larger canvas
function renderNextTetromino() {
  nextContext.clearRect(0, 0, nextCanvas.width, nextCanvas.height);
  const matrix = nextTetromino.matrix;
  const color = colors[nextTetromino.name];
  
  nextContext.fillStyle = color;
  for (let row = 0; row < matrix.length; row++) {
    for (let col = 0; col < matrix[row].length; col++) {
      if (matrix[row][col]) {
        nextContext.fillRect(col * nextGrid, row * nextGrid, nextGrid - 1, nextGrid - 1); // Adjusted grid size
      }
    }
  }
}

// Rest of the game code continues as is...

</script>
